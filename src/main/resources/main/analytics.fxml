<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.chart.CategoryAxis?> 
<?import javafx.scene.chart.LineChart?> 
<?import javafx.scene.chart.NumberAxis?>


<ScrollPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.AnalyticsController" stylesheets="@../styles/analytics.css" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="NEVER" pannable="true">
  <VBox spacing="20" style="-fx-padding: 20;">

    <HBox spacing="20">
      <VBox styleClass="SalesCard">
        <Label text="Sales Over Time" styleClass="SalesLabel"/>
      </VBox>

      <VBox styleClass="PieCard">
        <PieChart fx:id="pieChart" title="Top Products" prefWidth="500" prefHeight="300"/>
      </VBox>
    </HBox>

    <VBox styleClass="LineCard">

    <LineChart fx:id="lineChart" title="Sales Over Time" prefWidth="500" prefHeight="400">
          <xAxis>
            <CategoryAxis label="Month"/>
          </xAxis>
          <yAxis>
            <NumberAxis label="Sales"/>
          </yAxis>
        </LineChart>
    </VBox>

  </VBox>
</ScrollPane>