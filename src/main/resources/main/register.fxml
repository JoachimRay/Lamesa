<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<!-- Root container for the register page -->
<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.RegisterController" stylesheets="@../styles/register.css">
    <children>

      <!-- Include background images component -->
      <fx:include source="background-images.fxml" />
    <!-- Background: Card centered -->
    <BorderPane>
    
    <!-- Card centered in the middle -->
    <center>
      <VBox alignment="CENTER">
      <HBox alignment="CENTER">
            <padding>
                <Insets left="0" />
            </padding>

            <!-- Grey card box containing all register form fields -->
            <VBox alignment="TOP_LEFT" styleClass="Register_Card">

             <!-- Kusina logo image displayed at top center -->
        <HBox alignment="CENTER">
            <ImageView fitWidth="250" fitHeight="250" preserveRatio="true" styleClass="responsive-image">
                <image>
                    <Image url="@../assets/lamesa.png" />
                </image>
            </ImageView>
        </HBox>
        
        <!-- Centered fields container -->
        <HBox alignment="CENTER">
            <VBox alignment="TOP_LEFT" spacing="15">
                    <!-- Page title label -->
                    <Label text="Create Account" styleClass="Register_title" alignment="TOP_LEFT">
                        <VBox.margin>
                            <Insets bottom="0" top="0" left="0" right="0"/>
                        </VBox.margin>
                    </Label>
                <!-- Username input field -->
                <TextField fx:id="usernameField" promptText="Username" prefHeight="40" minHeight="40" maxHeight="40"/>
                
                <!-- Password field container with show/hide toggle button -->
                <HBox spacing="0" styleClass="password-container">
                    <!-- StackPane keeps PasswordField and TextField in same position to prevent text shift on toggle -->
                    <StackPane HBox.hgrow="ALWAYS" prefHeight="40" minHeight="40" maxHeight="40">
                        <!-- Hidden by default - shows bullet points for password -->
                        <PasswordField fx:id="passwordField" promptText="Enter Password" HBox.hgrow="ALWAYS" prefHeight="40" minHeight="40" maxHeight="40"/>
                        <!-- Visible when eye button clicked - shows password as plain text -->
                        <TextField fx:id="passwordFieldVisible" promptText="Enter Password" visible="false" HBox.hgrow="ALWAYS" prefHeight="40" minHeight="40" maxHeight="40"/>
                    </StackPane>
                    <!-- Eye icon button to toggle between password and plain text visibility -->
                    <Button fx:id="passwordToggle" text="ðŸ‘" onAction="#togglePasswordVisibility" styleClass="eye-button" focusTraversable="false"/>
                </HBox>

                <!-- Confirm Password field container with show/hide toggle button -->
                <HBox spacing="0" styleClass="password-container">
                    <!-- StackPane keeps PasswordField and TextField in same position to prevent text shift on toggle -->
                    <StackPane HBox.hgrow="ALWAYS" prefHeight="40" minHeight="40" maxHeight="40">
                        <!-- Hidden by default - shows bullet points for password -->
                        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" HBox.hgrow="ALWAYS" prefHeight="40" minHeight="40" maxHeight="40"/>
                        <!-- Visible when eye button clicked - shows password as plain text -->
                        <TextField fx:id="confirmPasswordFieldVisible" promptText="Confirm Password" visible="false" HBox.hgrow="ALWAYS" prefHeight="40" minHeight="40" maxHeight="40"/>
                    </StackPane>
                    <!-- Eye icon button to toggle between password and plain text visibility -->
                    <Button fx:id="confirmPasswordToggle" text="ðŸ‘" onAction="#toggleConfirmPasswordVisibility" styleClass="eye-button" focusTraversable="false"/>
                </HBox>
            </VBox>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="-10" left="45" right="0" bottom="0" />
                    </padding>
                    <Button fx:id="backButton" styleClass="login_button" text="Already have an account?" onAction="#switchToLogin"/>
        </HBox>


                <HBox alignment="CENTER"> 
                     <Button fx:id="NextButton" text="Next" onAction="#NextRegister" styleClass = "Next_register"/>
                </HBox>

                
               
            </VBox>
            
            <!-- Spacer that grows to fill remaining horizontal space, pushing card to left -->
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
      </VBox>
   </center>
   
   <!-- Outer padding for the whole page -->
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="0" />
   </padding>
   </BorderPane>

   </children>
   </StackPane>

