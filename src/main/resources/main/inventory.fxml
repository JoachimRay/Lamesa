<?xml version="1.0" encoding="UTF-8"?>

<!-- Importing JavaFX components used in this layout -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<!-- Layout for the Inventory page with TableView for displaying inventory items -->

<VBox alignment="TOP_LEFT" spacing="16" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.InventoryController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header section with title and button -->
    <HBox alignment="CENTER_LEFT" spacing="12">
        <children>
            <!-- Page title-->
            <Label style="-fx-font-size: 28; -fx-font-weight: bold;" text="Inventory" />

            <!-- Spacer to push button to the right -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- New Stock button -->
            <Button fx:id="newStockButton" onAction="#handleNewStock" style="-fx-background-color: #114F3A; -fx-text-fill: white; -fx-font-size: 12; -fx-padding: 8 16 8 16; -fx-border-radius: 4; -fx-background-radius: 4;" text="+ New Stock" />
        </children>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="12">
        <children>
            <!-- Quick search input -->
            <TextField fx:id="searchField" prefWidth="250" promptText="Quick search" style="-fx-font-size: 12; -fx-padding: 8; -fx-border-radius: 4;" />

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Status Button -->
            <Label style="-fx-font-size: 12;" text="Status" />
            <Button fx:id="statusFilterButton" onAction="#handleStatusFilter" style="-fx-background-color: transparent; -fx-font-size: 12; -fx-text-fill: #666; -fx-padding: 4 8 4 8;" text="All â–¼" />
        </children>
    </HBox>

    <!-- Table view for inventory items -->
    <TableView fx:id="inventoryTable" style="-fx-font-size: 12;" VBox.vgrow="ALWAYS">
        <columns>
            <!-- Checkbox column -->
            <TableColumn prefWidth="40" text="" />

            <!-- Product ID column -->
            <TableColumn fx:id="productIdColumn" prefWidth="80" text="Product ID" />
        
            <!-- Product column -->
            <TableColumn fx:id="productColumn" prefWidth="180" text="Product" />

            <!-- Category column -->
            <TableColumn fx:id="categoryColumn" prefWidth="100" text="Category" />

            <!-- Type column -->
            <TableColumn fx:id="typeColumn" prefWidth="100" text="Type" />

            <!-- Instruction column -->
            <TableColumn fx:id="instructionColumn" prefWidth="140" text="Instruction" />

            <!-- Items column -->
            <TableColumn fx:id="itemsColumn" prefWidth="80" text="Items" />

            <!-- Status column -->
            <TableColumn fx:id="statusColumn" prefWidth="110" text="Status" />
        </columns>
    </TableView>
</VBox>
