<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<!-- Root container for the Settings page -->
<VBox alignment="CENTER" spacing="12" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.SettingsController" stylesheets="@../styles/settings.css">
    <children>
        <!-- Page title -->
        <Label text="Settings" style="-fx-font-size:24; -fx-font-weight:bold;"/>
        <!-- Placeholder text for settings content -->
        <Label text="Settings placeholder." wrapText="true"/>


          <!-- Logout button -->
        <!-- Always visible for both employees and managers -->
        <Button fx:id="logoutBtn" onAction="#onLogout" styleClass="menu-button logout">
            <graphic>
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Label text="↩️" styleClass="icon"/>
                    <Label text="Logout" />
                </HBox>
            </graphic>
        </Button>

    </children>
</VBox>
