<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox 
    alignment="TOP_LEFT" 
    spacing="16" 
    xmlns="http://javafx.com/javafx/25" 
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="main.EmployeesController"
    stylesheets="@../styles/employees.css"
    styleClass="employees-root">

    <HBox alignment="CENTER_LEFT" spacing="12">
        <Label text="ðŸ‘¥ Employees" styleClass="employees-title"/>
        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="12">
        <TextField fx:id="searchField" prefWidth="280" promptText="ðŸ” Search by username..." styleClass="search-field" />
        <Region HBox.hgrow="ALWAYS" />
        <Label text="Role:" styleClass="role-label" />
        <ComboBox fx:id="roleFilterCombo" prefWidth="140" styleClass="role-filter-combo" />
    </HBox>

    <TableView fx:id="employeesTable" VBox.vgrow="ALWAYS" styleClass="employees-table">
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
        <columns>
            <TableColumn fx:id="usernameColumn" prefWidth="200" text="Username" />
            <TableColumn fx:id="roleColumn" prefWidth="150" text="Role" />
            <TableColumn fx:id="lastLoginColumn" prefWidth="220" text="Last Login" />
            <TableColumn fx:id="shiftStatusColumn" prefWidth="180" text="Shift Status" />
            <TableColumn fx:id="actionsColumn" prefWidth="60" text=""/>

        </columns>
    </TableView>

</VBox>
