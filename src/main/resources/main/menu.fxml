<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<!--
    Sidebar Menu FXML
    Controller: main.MenuController
    Stylesheet: menu.css
    Purpose:
        - Provides the vertical sidebar for navigation in the app.
        - Buttons correspond to different pages (Dashboard, Inventory, Orders, etc.).
        - Logout button allows user to exit and clear session.
        - RBAC (Role-Based Access Control) hides certain buttons for employees.
-->
<VBox
        fx:id="sidebarRoot"                    
        xmlns="http://javafx.com/javafx/8.0.171"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="main.MenuController"
        spacing="10"
        stylesheets="@../styles/menu.css"
        styleClass="sidebar"
        minWidth="60"
        prefWidth="300"
        maxWidth="300">

    <!-- Padding for the entire sidebar -->
    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <!-- Logo section at the top of the sidebar -->
    <HBox alignment="CENTER" styleClass="sidebar-logo">
        <ImageView fitWidth="200" fitHeight="200" preserveRatio="true" styleClass="logo">
            <image>
                <Image url="@../assets/lamesa.png" />
            </image>
        </ImageView>
    </HBox>

    <!-- Menu buttons container -->
    <VBox alignment="TOP_LEFT" spacing="15" VBox.vgrow="ALWAYS">
        <padding><Insets top="0" bottom="400" left="70" right="0"/></padding>

        <!-- Dashboard button -->
        <Button fx:id="dashboardBtn" onAction="#onDashboard" styleClass="menu-button">
            <graphic>
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                        <image><Image url="@../assets/home.png"/></image>
                    </ImageView>
                    <Label text="Dashboard" />
                </HBox>
            </graphic>
        </Button>

        <!-- Inventory button -->
        <Button fx:id="inventoryBtn" onAction="#onInventory" styleClass="menu-button">
            <graphic>
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                        <image><Image url="@../assets/inventory.png"/></image>
                    </ImageView>
                    <Label text="Inventory"/>
                </HBox>
            </graphic>
        </Button>

        <!-- Orders button -->
        <Button fx:id="analyticsBtn" onAction="#onAnalytics" styleClass="menu-button">
            <graphic>
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                        <image><Image url="@../assets/order_manager.png"/></image>
                    </ImageView>
                    <Label text="Analytics"/>
                </HBox>
            </graphic>
        </Button>

  

        <!-- Employees button -->
        <!-- Hidden for employees via RBAC in MenuController -->
        <Button fx:id="employeesBtn" onAction="#onEmployees" styleClass="menu-button">
            <graphic>
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                        <image><Image url="@../assets/account.png"/></image>
                    </ImageView>
                    <Label text="Employees"/>
                </HBox>
            </graphic>
        </Button>

        <!-- Settings button -->
        <!-- Hidden for employees via RBAC in MenuController -->
        <Button fx:id="settingsBtn" onAction="#onSettings" styleClass="menu-button">
            <graphic>
                <HBox spacing="12" alignment="CENTER_LEFT">
                     <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                        <image><Image url="@../assets/Settings.png"/></image>
                    </ImageView>
                    <Label text="Settings" />
                </HBox>
            </graphic>
        </Button>

    </VBox>
</VBox>
