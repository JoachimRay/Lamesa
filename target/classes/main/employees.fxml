<?xml version="1.0" encoding="UTF-8"?>

<!-- Importing JavaFX components used in this layout -->
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<!--
    Layout for the Employees page.
    Currently shows placeholder text.
    You can replace this with a TableView for listing employees
    and forms for adding/editing records.
-->
<VBox
        alignment="CENTER"
        spacing="12"
        xmlns="http://javafx.com/javafx/8.0.171"
        xmlns:fx="http://javafx.com/fxml/1">

    <children>

        <!-- Page title -->
        <Label
            text="Employees"
            style="-fx-font-size:24; -fx-font-weight:bold;" />

        <!-- Placeholder description for future employee management UI -->
        <Label
            text="Employees management placeholder. Use TableView and forms."
            wrapText="true" />

    </children>
</VBox>
