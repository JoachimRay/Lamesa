<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.ChoiceController" stylesheets="@../styles/choice.css">
    <children>

      <!-- Include background images component -->
      <fx:include source="background-images.fxml" />



 <!-- Background: Card centered -->
   <BorderPane>
   
   <!-- Card centered in the middle -->
   <center>
      <VBox alignment="CENTER">
         <HBox alignment="CENTER">
            <padding>
                <Insets left="0" />
            </padding>

            <!-- Grey card box containing all login form fields -->
            <VBox alignment="TOP_CENTER" spacing="20" styleClass="Choice_Card">

                <!-- lamesa logo image displayed at top center -->
                <HBox alignment="CENTER">
                    <ImageView fitWidth="250" fitHeight="250" preserveRatio="true" styleClass="responsive-image">
                        <image>
                            <Image url="@../assets/lamesa.png" />
                        </image>
                    </ImageView>
                </HBox>
        
                <!-- Centered fields container -->
                <VBox alignment="CENTER" spacing="20">
                    <!-- Page title label -->
                    <Label text="Choice" styleClass="Choice_title" alignment="CENTER">
                        <VBox.margin>
                            <Insets bottom="10" top="0" left="0" right="0"/>
                        </VBox.margin>
                    </Label>
                    
                    <!-- Manager Button -->
                    <HBox alignment="CENTER"> 
                        <Button fx:id="managerButton" text="Manager" onAction="#handleManager" styleClass="Manager_button"/>
                    </HBox>
                    
                    <!-- Employee Button -->
                    <HBox alignment="CENTER"> 
                        <Button fx:id="employeeButton" text="Employee" onAction="#handleEmployee" styleClass="Employee_button"/>
                    </HBox>
                </VBox>
            </VBox>

            <!-- Spacer that grows to fill remaining horizontal space -->
            <Region HBox.hgrow="ALWAYS"/>
         </HBox>
      </VBox>
   </center>
   
   <!-- Outer padding for the whole page -->
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="0" />
   </padding>
   </BorderPane>


    </children>
</StackPane>    
    
    