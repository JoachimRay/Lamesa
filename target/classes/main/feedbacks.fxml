<?xml version="1.0" encoding="UTF-8"?>

<!-- Importing JavaFX components for the Feedback page -->
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<!--
    Layout for the Feedback page.
    Currently shows placeholder text.
    You can replace this with a ListView/TableView for customer feedback entries.
-->
<VBox
        alignment="CENTER"
        spacing="12"
        xmlns="http://javafx.com/javafx/8.0.171"
        xmlns:fx="http://javafx.com/fxml/1"
        stylesheets="@../styles/feedbacks.css">

    <children>

        <!-- Page title -->
        <Label
            text="Feedback"
            style="-fx-font-size:24; -fx-font-weight:bold;" />

        <!-- Placeholder text -->
        <Label
            text="Customer feedback placeholder."
            wrapText="true" />

    </children>
</VBox>
