<?xml version="1.0" encoding="UTF-8"?>

<!-- Importing JavaFX components used in this layout -->
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<!--
    Layout for the Inventory page.
    Currently shows placeholder text.
    Replace this with a TableView to display items and inventory management UI.
-->
<VBox
        alignment="CENTER"
        spacing="12"
        xmlns="http://javafx.com/javafx/8.0.171"
        xmlns:fx="http://javafx.com/fxml/1"
        stylesheets="@../styles/inventory.css">

    <children>

        <!-- Page title -->
        <Label
            text="Inventory"
            style="-fx-font-size:24; -fx-font-weight:bold;" />

        <!-- Placeholder text for future inventory UI -->
        <Label
            text="Inventory page placeholder. Replace with TableView for items."
            wrapText="true" />

    </children>
</VBox>
