<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.AnalyticsController" stylesheets="@../styles/analytics.css" spacing="20" style="-fx-padding: 20;">

      <LineChart fx:id="lineChart" title="test sales over time" prefWidth="500" prefHeight="300">
        <xAxis>
        <CategoryAxis fx:id="xAxis" label="Month"/>
        </xAxis>

        <yAxis>
        <NumberAxis fx:id="yAxis" label="Sales"></NumberAxis>
        </yAxis>
      </LineChart>

      <PieChart fx:id="pieChart" title="Fruit Consumption" prefWidth="500" prefHeight="300"/>
      
</VBox>