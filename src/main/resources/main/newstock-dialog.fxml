<padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
</padding>
   <children>
      <GridPane prefHeight="343.0" prefWidth="383.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
