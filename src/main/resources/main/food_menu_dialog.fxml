<?xml version="1.0" encoding="UTF-8"?>

<!-- Importing JavaFX components used in this dialog -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Dialog layout for adding a new food menu item -->

<VBox prefHeight="450.0" prefWidth="350.0" 
      spacing="5"
      xmlns="http://javafx.com/javafx/25" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="main.FoodMenuDialogController">

    <!-- Padding inside root container -->
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <!-- Image upload area (click to upload) -->
    <ImageView fx:id="imageUpload" 
               fitHeight="200.0" 
               fitWidth="320.0" 
               pickOnBounds="true" 
               preserveRatio="true"
               style="-fx-cursor: hand;">
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </VBox.margin>
    </ImageView>

    <!-- Meal name input -->
    <TextField fx:id="mealLabel" 
               promptText="Meal Name">
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </VBox.margin>
    </TextField>

    <!-- Labels for dropdowns and price -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="Category" alignment="CENTER" prefWidth="100.0" />
        <Label text="Type" alignment="CENTER" prefWidth="100.0" />
        <Label text="Price" alignment="CENTER" prefWidth="100.0" />
    </HBox>

    <!-- Category, Type dropdowns and Price input -->
    <HBox alignment="CENTER" spacing="5">
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </VBox.margin>

        <!-- Category dropdown -->
        <ChoiceBox fx:id="categoryBox" prefWidth="100.0" />
        
        <!-- Type dropdown -->
        <ChoiceBox fx:id="typeBox" prefWidth="100.0" />
        
        <!-- Price input -->
        <TextField fx:id="priceField" prefWidth="100.0" promptText="0.00" />
    </HBox>

    <!-- Description text area -->
    <TextArea fx:id="descriptionText" 
              prefHeight="100.0" 
              promptText="Description">
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </VBox.margin>
    </TextArea>

    <!-- Action buttons -->
    <HBox alignment="CENTER" spacing="10">
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </VBox.margin>

        <Button fx:id="okayButton" 
                text="Okay" 
                prefWidth="80.0"
                onAction="#handleOkay" />

        <Button fx:id="cancelButton" 
                text="Cancel" 
                prefWidth="80.0"
                onAction="#handleCancel" />
    </HBox>

</VBox>
