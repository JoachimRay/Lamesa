<?xml version="1.0" encoding="UTF-8"?>

<!-- Importing JavaFX components used in this dialog -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<!-- Dialog layout for adding a new food menu item -->

<VBox prefHeight="550.0" prefWidth="450.0" 
      spacing="12"
      xmlns="http://javafx.com/javafx/25" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="main.FoodMenuDialogController"
      stylesheets="@../styles/food-menu-dialog.css"
      styleClass="menu-dialog-root">

    <!-- Padding inside root container -->
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>

    <!-- Image upload area (click to upload) -->
    <StackPane fx:id="imageContainer" 
               prefHeight="200.0" 
               prefWidth="320.0" 
               styleClass="image-container">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
        <Label fx:id="uploadLabel" text="Click to upload image" styleClass="upload-label" />
        <ImageView fx:id="imageUpload" 
                   fitHeight="190.0" 
                   fitWidth="310.0" 
                   pickOnBounds="true" 
                   preserveRatio="true" />
    </StackPane>

    <!-- Meal name input -->
    <TextField fx:id="mealLabel" 
               promptText="Meal Name"
               styleClass="dialog-field">
        <VBox.margin>
            <Insets bottom="5.0" />
        </VBox.margin>
    </TextField>

    <!-- Labels for dropdowns and price -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="Category" alignment="CENTER" prefWidth="130.0" styleClass="dialog-label" />
        <Label text="Type" alignment="CENTER" prefWidth="130.0" styleClass="dialog-label" />
        <Label text="Price" alignment="CENTER" prefWidth="130.0" styleClass="dialog-label" />
    </HBox>

    <!-- Category, Type dropdowns and Price input -->
    <HBox alignment="CENTER" spacing="10">
        <VBox.margin>
            <Insets bottom="5.0" />
        </VBox.margin>

        <!-- Category dropdown -->
        <ChoiceBox fx:id="categoryBox" prefWidth="130.0" styleClass="dialog-choice" />
        
        <!-- Type dropdown -->
        <ChoiceBox fx:id="typeBox" prefWidth="130.0" styleClass="dialog-choice" />
        
        <!-- Price input -->
        <TextField fx:id="priceField" prefWidth="130.0" promptText="0.00" styleClass="dialog-field" />
    </HBox>

    <!-- Description text area -->
    <TextArea fx:id="descriptionText" 
              prefHeight="100.0" 
              promptText="Description"
              styleClass="dialog-text-area">
        <VBox.margin>
            <Insets bottom="5.0" />
        </VBox.margin>
    </TextArea>

    <!-- Action buttons -->
    <HBox alignment="CENTER" spacing="12">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>

        <Button fx:id="okayButton" 
                text="Add Meal" 
                prefWidth="100.0"
                styleClass="dialog-okay-btn"
                onAction="#handleOkay" />

        <Button fx:id="cancelButton" 
                text="Cancel" 
                prefWidth="100.0"
                styleClass="dialog-cancel-btn"
                onAction="#handleCancel" />
    </HBox>

</VBox>
