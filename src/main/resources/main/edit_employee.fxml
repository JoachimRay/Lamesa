<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!--
  Small modal UI to edit a user's role.
  Controller: main.EditEmployeeController
-->
<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.EditEmployeeController"
      spacing="12" alignment="CENTER"
      style="-fx-padding:16; -fx-background-color: white;">

    <children>
        <Label text="Edit user role" style="-fx-font-size:16; -fx-font-weight:bold;"/>
        <Label fx:id="usernameLabel" text="username" />

        <HBox spacing="8" alignment="CENTER_LEFT">
            <Label text="Role:" />
            <ComboBox fx:id="roleCombo" prefWidth="200"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Save" onAction="#onSave"/>
            <Button text="Cancel" onAction="#onCancel"/>
        </HBox>
    </children>
</VBox>
